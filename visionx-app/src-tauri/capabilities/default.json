{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Default capabilities for VisionX",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-set-focus",
    "core:webview:default",
    "core:event:default",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read",
    "fs:read-all",
    "fs:allow-exists",
    "shell:default",
    "shell:allow-open",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api.github.com/repos/nickpolychronakis/VisionX/releases/latest" }
      ]
    }
  ]
}
