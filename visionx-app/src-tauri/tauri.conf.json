{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VisionX",
  "version": "0.2.0",
  "identifier": "com.visionx.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VisionX",
        "label": "main",
        "width": 900,
        "height": 850,
        "minWidth": 600,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/nickpolychronakis/VisionX/releases/latest/download/latest.json"
      ],
      "pubkey": "RWRE54xY51PXYdDNuEHPt9FNS8pTpe26eEZh3rKuAnTniEIY8J18kszs"
    }
  }
}
